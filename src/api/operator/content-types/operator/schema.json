{
  "kind": "collectionType",
  "collectionName": "operators",
  "info": {
    "singularName": "operator",
    "pluralName": "operators",
    "displayName": "Operator",
    "description": "Ship operator/management company"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "website": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "ships": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ship.ship",
      "mappedBy": "operator"
    }
  }
}
