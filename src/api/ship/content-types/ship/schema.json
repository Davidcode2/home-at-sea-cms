{
  "kind": "collectionType",
  "collectionName": "ships",
  "info": {
    "singularName": "ship",
    "pluralName": "ships",
    "displayName": "Ship",
    "description": "Residential ship"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "tagline": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "status": {
      "type": "enumeration",
      "enum": ["operational", "under-construction", "planned"],
      "default": "planned"
    },
    "yearBuilt": {
      "type": "integer"
    },
    "length": {
      "type": "decimal"
    },
    "residenceCount": {
      "type": "integer"
    },
    "operator": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::operator.operator",
      "inversedBy": "ships"
    },
    "apartments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::apartment.apartment",
      "mappedBy": "ship"
    },
    "itineraries": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::itinerary.itinerary",
      "mappedBy": "ship"
    },
    "stories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::story.story",
      "mappedBy": "ship"
    }
  }
}
